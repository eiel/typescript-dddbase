    "noImplicitAny": true,
    "outDir": "./build/",
    "module": "commonjs",
    "target": "es6",
    "rootDir": "./",
    "declaration": true,
    "listFiles": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noEmitOnError": true,
    "lib": ["es5", "dom", "es2015.promise"]
  },
  "include": [
    "./src/index.ts"
  ],
